{
  "OpenAIEndpoint": "*",
  "OpenAIKey": "*",
  "DeploymentName": "*",
  "AgentName": "Fiona",
  "SpeechKey": "*",
  "SpeechRegion": "*",
  "TokenBudget": 100000,
  "enabled": 1,
  "SystemPromptText": "Load from system.md",
  "UserPromptText": "Cześć ! Jak możesz mi pomóc?",
  "flows": [
    {
      "flowName": "FALKA",
      "firstMicroFlowName": "flow_main",
      "microFlows": [
        {
          "name": "flow_main",
          "systemPrompt": " Keep conversation flow according to user's needs. \n",
          "nextFlow": "flow_main",
          "apiFunctions": [
            {
              "name": "handle_user_intent",
              "description": "Handle user intent as soon as it is recognized",
              "parameters": {
                "type": "object",
                "properties": {
                  "intent": {
                    "type": "string",
                    "description": "User intent",
                    "enum": [ "navigate_to_balance_info", "navigate_to_services_info", "connect_with_human_consultant", "navigate_to_payment_info" ]
                  },
                  "required": [ "intent" ]
                }
              }
            },
            {
              "name": "navigate_to_balance_info",
              "description": "Open form with user account balance",
              "parameters": "{}"
            },
            {
              "name": "navigate_to_services_info",
              "description": "Open form with user services",
              "parameters": "{}"
            },
            {
              "name": "connect_with_human_consultant",
              "description": "Connect user with human consultant",
              "parameters": {
                "type": "object",
                "properties": {
                  "conversation_subject": {
                    "type": "string",
                    "description": "Subject of the conversation"
                  },
                  "required": [ "conversation_subject" ]
                }
              }
            },
            {
              "name": "navigate_to_payment_info",
              "description": "Open form with user payment info",
              "parameters": "{}"
            }
          ]
        },
        {
          "name": "flow_new",
          "systemPrompt": " Let's start a new conversation. \n",
          "nextFlow": "flow_main"
        },
        {
          "name": "flow_exit",
          "systemPrompt": "User has ended the conversation, has no more tasks for you or said goodbye.\n",
          "nextFlow": ""
        },
        {
          "name": "flow_wait",
          "systemPrompt": " DO NOT say anything. \n",
          "nextFlow": "flow_wait"
        }
      ]
    }
  ]
}
